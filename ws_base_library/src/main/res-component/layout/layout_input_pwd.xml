<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_leading"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="@dimen/cn_len_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_search_white_24dp" />

    <EditText
        android:id="@+id/et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:text="123123"
        app:layout_constraintEnd_toStartOf="@id/ibtn_toggle"
        app:layout_constraintStart_toEndOf="@id/iv_leading"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtn_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cn_len_one"
        android:background="@android:color/transparent"
        android:padding="@dimen/cn_len_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ibtn_clear"
        app:layout_constraintStart_toEndOf="@id/et"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_eye_close" />

    <ImageButton
        android:id="@+id/ibtn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cn_len_one"
        android:background="@android:color/transparent"
        android:padding="@dimen/cn_len_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ibtn_toggle"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_x" />


</androidx.constraintlayout.widget.ConstraintLayout>